<style>
  .new-resort{
    margin-bottom: 10px;
  }

  .table th,td{
    text-align: center;
    font-size: 20px;
  }

  .table{
    table-layout: fixed;
    word-wrap:break-word;
  }

  .table tbody tr td{
    vertical-align: middle;
  }

</style>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">  
      
      <div class="new-resort">
        <%= link_to "New Resort",new_admin_travelresort_path,class:"btn btn-primary" %>
      </div>
      
      <table class="table table-striped table-bordered" >
        <thead>
          <tr>
             <th>景點圖片</th>
             <th>景點地區</th>
             <th>景點名稱</th>
             <th>景點瀏覽</th>
             <th>景點編輯</th>
             <th>刪除景點</th>
          </tr> 
        </thead>

        <% @travelresorts.each do |travelresort| %>
        <tbody>
          <tr>
            <td>
              <%= link_to admin_travelresort_path(travelresort) do%>
                <%= image_tag(travelresort.image,width:"100%") %>
              <% end %>
            </td>

            <td></td>  

            <td><%= travelresort.name %></td>

            <td>
              <%= link_to admin_travelresort_path(travelresort) do%> 
                <button type="button" class="btn btn-default  btn-md">
                  <span class="glyphicon glyphicon-eye-open"></span>  瀏覽
                </button>
              <% end %> 
            </td>

            <td>
              <%= link_to edit_admin_travelresort_path(travelresort) do%> 
                <button type="button" class="btn btn-default  btn-md">
                  <span class="glyphicon glyphicon-pencil"></span> 編輯
                </button>
              <% end %>
            </td>
            
            <td>
              <%= link_to admin_travelresort_path(travelresort),method: :delete,data:{confirm:"Are You Sure ?"} do%>
                <button type="button" class="btn btn-default  btn-md">
                  <span class="glyphicon glyphicon-trash"></span> 刪除
                </button>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>

      <div class="text-center">
        <%= paginate @travelresorts %>
      </div>

    </div>
  </div>
</div>

